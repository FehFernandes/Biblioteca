<div class="dashboard-container">
    <div class="dashboard-header">
        <div class="user-info">
            <h1>{{#if author.id}}üìù Editar Autor{{else}}‚úçÔ∏è Cadastrar Autor{{/if}}</h1>
        </div>
        <div>
            <a href="/authors" class="btn btn-secondary">Voltar</a>
        </div>
    </div>

    {{#if error}}
        <div class="error">{{error}}</div>
    {{/if}}

    <div class="card">
        <form action="{{action}}" method="{{method}}">
            <div class="form-group">
                <label for="name">Nome *</label>
                <input type="text" id="name" name="name" value="{{author.name}}" required>
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px;">
                <div class="form-group">
                    <label for="nationality">Nacionalidade</label>
                    <input type="text" id="nationality" name="nationality" value="{{author.nationality}}">
                </div>

                <div class="form-group">
                    <label for="birthDate">Data de Nascimento</label>
                    <input type="date" id="birthDate" name="birthDate" value="{{author.birthDate}}">
                </div>
            </div>

            <div class="form-group">
                <label for="biography">Biografia</label>
                <textarea id="biography" name="biography" rows="6" style="width: 100%; padding: 12px; border: 2px solid #ddd; border-radius: 5px; font-family: inherit;">{{author.biography}}</textarea>
            </div>

            <button type="submit" class="btn">
                {{#if author.id}}Atualizar Autor{{else}}Cadastrar Autor{{/if}}
            </button>
        </form>
    </div>
</div>
